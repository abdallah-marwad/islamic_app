<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrayerTimeQuran" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/card_background</item>
        <item name="colorPrimaryVariant">@color/card_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Main Fragment -->

    <style name="main_card">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="android:shadowRadius">@dimen/_10sdp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:backgroundTint">@color/card_background</item>


    </style>



    <style name="main_text_in_card">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>
</resources>