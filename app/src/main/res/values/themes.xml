<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrayerTimeQuran" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/card_background</item>
        <item name="colorPrimaryVariant">@color/card_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/appbar_light_green</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowIsTranslucent">true</item>

        <!-- specify enter and exit transitions -->


        <!-- Customize your theme here. -->
    </style>


    <!-- Main Fragment -->

    <style name="main_card">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="android:shadowRadius">@dimen/_10sdp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:backgroundTint">@color/card_background</item>


    </style>


    <style name="main_text_in_card">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_margin">@dimen/_15sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_frag_quran_style">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/text_frag_quran_page_frame</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:textStyle">bold</item>


    </style>

<style name="text_frag_setting_style">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:layout_margin">@dimen/_6sdp</item>
        <item name="android:drawablePadding">@dimen/_6sdp</item>
        <item name="android:layout_height">0dp</item>


    </style>

    <style name="Theme.PrayerTimeQuran.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PrayerTimeQuran.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PrayerTimeQuran.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>